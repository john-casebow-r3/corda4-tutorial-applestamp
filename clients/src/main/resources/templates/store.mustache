{{> header}}

<h2>Baskets</h2>
<div>
    <form action="/baskets" name="basket" method="post">
        <text>Description</text><input type="text" name="description" value="Apples!" />
        <text>Owner</text><input type="text" name="owner" value="HomeFarm" />
        <text>Weight</text><input type="text" name="weight" value="10" />
        <button type="submit">Save</button>
    </form>
</div>

<div class="grid-container">
    <div class="grid-item-title">Description</div>
    <div class="grid-item-title">Owner</div>
    <div class="grid-item-title">Weight</div>
    {{#baskets}}
    <div class="grid-item">{{description}}</div>
    <div class="grid-item">{{owner}}</div>
    <div class="grid-item">{{weight}}</div>
    {{/baskets}}
</div>

<h2>Stamps</h2>
<div>
    <form action="/stamps" name="stamp" method="post">
        <text>Description</text><input type="text" name="description" value="Apples!" />
        <text>Holder</text><input type="text" name="holder" value="Bob" />
        <text>Weight</text><input type="text" name="weight" value="10" />
        <button type="submit">Save</button>
    </form>
</div>

<div class="grid-container-6-cols">
    <div class="grid-item-title">Description</div>
    <div class="grid-item-title">Issuer</div>
    <div class="grid-item-title">Weight</div>
    <div class="grid-item-title">Holder</div>
    <div class="grid-item-title">Id</div>
    <div class="grid-item-title">Redeem</div>
    {{#stamps}}
    <div class="grid-item">{{description}}</div>
    <div class="grid-item">{{issuer}}</div>
    <div class="grid-item">{{weight}}</div>
    <div class="grid-item">{{holder}}</div>
    <div class="grid-item">{{id}}</div>
    <div class="grid-item">
        <form action="/redeem" name="stamp" method="post">
            <input type="hidden" name="holder" value="{{holder}}"/>
            <input type="hidden" name="id" value="{{id}}"/>
            <button type="submit">Redeem</button>
        </form>
    </div>
    {{/stamps}}
</div>

<div>
    <input type="button" value="Refresh" onClick="location.href=location.href">
</div>


{{> footer}}